.container{
  padding:0;
}

.header{
  width: 100%;
  height: 9rem;
  line-height: 9rem;
  border-top: 1rpx solid #ccc; 
  border-bottom: 1rpx solid #ccc;
}

.header-user-img{
  width: 5rem;
  height:5rem;
  float:left;
  margin-top:2rem;
  margin-left: 10%;
  border: .1225rem solid #ccc;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  overflow: hidden;
}

.header-user-img image{
  width: 100%;
  height:100%;
}

.header-user-info{
  float:left;
  height: 9rem;
  padding:2rem;
}

.header-user-score{
  display:initial;
  color: red;
}

.header-user-p{
  width: 100%;
  height: 2.5rem;
  line-height: 2.5rem;
}

.account-nav-list{
  width: 100%;
  height: auto;
  border-top: .0625rem solid #ccc;
  margin-top: 1.25rem;
}

.account-nav-list .account-nav-li{
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  padding: 0 .625rem ;
  font-size: .75rem;
  border-bottom:  .0625rem solid #ccc;
}

.account-nav-icon{
  width: 1rem;
  height: 1rem;
  float: right;
  overflow: hidden;
  color: #ccc;
  line-height: 1rem;
  text-align: center;
  font-size: 1rem;
  margin-top: 1rem;
}

