.container{
  padding:0;
}

.header{
  width: 100%;
  height: 6rem;
  line-height: 6rem;
  border-top: 1rpx solid #ccc; 
  background-color: #f2f2f2;
}

.header-user-img{
  width: 4rem;
  height:4rem;
  float:left;
  margin-top:1rem;
  margin-left: 10%;
  border: .1225rem solid #ccc;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  overflow: hidden;
}

.header-user-img image{
  width: 100%;
  height:100%;
}

.header-user-info{
  float:left;
  height: 6rem;
  padding:1rem;
}

.header-user-score{
  display:initial;
  color: red;
}

.header-user-p{
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  font-size: .75rem;
}

.header-user-name{
  font-size: 1rem;
}

.account-nav-list{
  width: 100%;
  height: auto;
}

.account-nav-list .account-nav-li{
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  font-size: .75rem;
  border-bottom:  .0625rem solid #f2f2f2;
  color: rgb(102, 102, 102);
}

.account-nav-icon{
  width: 1rem;
  height: 1rem;
  float: right;
  overflow: hidden;
  color: #ccc;
  line-height: 1rem;
  text-align: center;
  font-size: 1rem;
  margin-top: 1rem;
}

.account-nav-li-icon{
  width: 1rem;
  height: 1rem;
  overflow: hidden;
  color: rgb(102, 102, 102);
  line-height: 1rem;
  text-align: center;
  font-size: 1rem;
  margin-top: 1rem;
  margin-left: .5rem;
  margin-right: .5rem;
  float:left;
}

